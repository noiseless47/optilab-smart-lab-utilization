# OptiLab Collector Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=optilab
DB_USER=postgres
DB_PASSWORD=your_password_here

# SSH Configuration
SSH_USER=admin
SSH_KEY=/home/user/.ssh/optilab_key
SSH_PORT=22
SSH_TIMEOUT=10

# Message Queue Configuration
QUEUE_ENABLED=false
QUEUE_TYPE=rabbitmq  # Options: rabbitmq, redis
QUEUE_HOST=localhost
QUEUE_PORT=5672      # 5672 for RabbitMQ, 6379 for Redis
QUEUE_USER=guest
QUEUE_PASSWORD=guest

# Queue Names
DISCOVERY_QUEUE=discovery_queue
METRICS_QUEUE=metrics_queue
ALERT_QUEUE=alert_queue

# Collection Configuration
COLLECTION_MODE=all  # Options: all, single, lab, dept
PING_TIMEOUT=1
PING_COUNT=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/optilab/collector.log
